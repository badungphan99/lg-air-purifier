{
  "pluginAlias": "LGAirPurifier",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      },
      "country": {
        "title": "Country Code",
        "type": "string",
        "required": true,
        "default": "VN"
      },
      "region": {
        "title": "Region",
        "type": "string",
        "required": true,
        "default": "kic",
        "oneOf": [
          { "title": "Aisa", "enum": ["kic"] },
          { "title": "Europe", "enum": ["eic"] },
          { "title": "North/South America", "enum": ["aic"] }
        ]
      },
      "token": {
        "title": "PAT token",
        "description": "The PAT token. You can get it from https://connect-pat.lgthinq.com.",
        "type": "string",
        "required": true,
        "default": ""
      },
      "interval": {
        "title": "Interval",
        "description": "Interval in seconds to check the status of the device.",
        "type": "number",
        "required": false,
        "default": 30
      }
    }
  }
}
